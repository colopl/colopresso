{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "../../build/electron",
    "rootDir": "./",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "sourceMap": true
  },
  "include": ["./main.ts", "./preload.ts", "./global.d.ts"],
  "exclude": ["./entries/**/*", "./app/**/*"]
}
