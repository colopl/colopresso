{
  "name": "colopresso",
  "build": {
    "dockerfile": "../Dockerfile",
    "target": "devcontainer",
    "context": ".."
  },
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--cap-add=SYS_ADMIN",
    "--security-opt=seccomp:unconfined",
    "--privileged"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "github.copilot-chat",
        "github.vscode-github-actions",
        "ms-azuretools.vscode-containers",
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-extension-pack",
        "ms-vscode.cmake-tools",
        "ms-vscode.makefile-tools"
      ]
    }
  }
}
